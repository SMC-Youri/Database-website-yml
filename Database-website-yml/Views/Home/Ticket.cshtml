@model Database_website_yml.Models.Order
@{
    ViewData["Title"] = "Ticket";
}
<div class="contact-text"><h1>@ViewData["Title"]</h1></div>

<form method="post" class="contactform">
    <div class="form-group">
        @Html.LabelFor(m => m.voornaam)
        @Html.TextBoxFor(m => m.voornaam)
        @Html.ValidationMessageFor(m => m.voornaam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.achternaam)
        @Html.TextBoxFor(m => m.achternaam)
        @Html.ValidationMessageFor(m => m.achternaam)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.mailtje)
        @Html.TextBoxFor(m => m.mailtje)
        @Html.ValidationMessageFor(m => m.mailtje)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.telefoon)
        @Html.TextBoxFor(m => m.telefoon)
        @Html.ValidationMessageFor(m => m.telefoon)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.adres)
        @Html.TextBoxFor(m => m.adres)
        @Html.ValidationMessageFor(m => m.adres)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.bericht)
        @Html.TextBoxFor(m => m.bericht)
        @Html.ValidationMessageFor(m => m.bericht)
    </div>
      <a download="Argus-ticket.jpg" href="/path/to/image" title="ImageName" id="download_image">
        <input class="contact-button" type="button" value="Bestellen" alt="ImageName" src="/path/to/image">
      </a>
  </form>
<br>