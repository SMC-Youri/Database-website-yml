@model Database_website_yml.Models.Film

<div class="detail-big-slide">
    <div class="mySlides" style="width: 100%; height:50%">
        <img src="@Model.image" style="width: 100%; height:50%">
    </div>

    <div class="mySlides">
        <div class="yt">
        <iframe src="@Model.trailer"></iframe>
        </div>
        <div class="text">Trailer</div>
    </div>
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
</div>
<br>
<div class="detail-name"><h1>@Model.name</h1></div>
<div class="detail-age"><img src="@Model.age" width=100 height=100 /></div>
<div class="detail-description">@Model.description</div>
<br>
<div class="detail-trailer" style="text-align: center">
    <h1>Bekijk de trailer</h1>
    <br>
    <iframe src="@Model.trailer" width="480" height="270" style="border: 5px solid #E6E6E6"></iframe>
    <br><br />
</div>

<div class="row">
    <div class="cast-crew">
        <h1>Cast & Crew</h1>
    </div>
    <div class="column3">
        <a></a>
    </div>
    <div class="column3">
        <a href="@Model.actor1"><img src="@Model.actor1" alt="Actor1" width=255 height=340 style="border: 5px solid #1A1A1A;"></a>
    </div>
    <div class="column3">
        <a href="@Model.actor2"><img src="@Model.actor2" alt="Actor2" width=255 height=340 style="border: 5px solid #1A1A1A;"></a>
    </div>
    <div class="column3">
        <a href="@Model.actor3"><img src="@Model.actor3" alt="Actor3" width=255 height=340 style="border: 5px solid #1A1A1A;"></a>
    </div>
    <div class="column4">
        <a></a>
    </div>
</div>

<div class="row">
    <div class="column3">
        <a></a>
    </div>
    <div class="column3">
        <h3>@Model.name1</h3>
    </div>
    <div class="column3">
        <h3>@Model.name2</h3>
    </div>
    <div class="column3">
        <h3>@Model.name3</h3>
    </div>
