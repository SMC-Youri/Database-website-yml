<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Database_website_yml</title>
    <script type="text/javascript" src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Database_website_yml.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://i.ibb.co/nLFbw3V/Argus.png" alt="Argus" height=80 width=80 /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @Html.ActiveClass("Home", "Index", "selected")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item @Html.ActiveClass("Home,Films", "Films", "selected")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Films">Films</a>
                        </li>
                        <li class="nav-item @Html.ActiveClass("Home,Contact", "Contact", "selected")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <button id="dark-mode-toggle" class="dark-mode-toggle" aria-label="dark mode">
                        <svg width="100%" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 496"><path fill="currentColor" d="M8,256C8,393,119,504,256,504S504,393,504,256,393,8,256,8,8,119,8,256ZM256,440V72a184,184,0,0,1,0,368Z" transform="translate(-8 -8)" /></svg>
                    </button>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer>

          <div class="row">
            <div class="footerX">
                <br>
                <h5>Volg onze Instagram</h5>
                <a href="https://www.instagram.com/sint_maartenscollege/?hl=en"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Instagram_icon.png/2048px-Instagram_icon.png" alt="Instagram" width=100 height=100 /></a>
            </div>
            <div class="footerX">
                <br>
                <h5>Volg ons Youtubekanaal</h5>
                <a href="https://www.youtube.com/channel/UCiTSrvR9XpDVMsauzusQYvQ"><img src="https://upload.wikimedia.org/wikipedia/commons/e/ef/Youtube_logo.png" alt="Youtube" width=150 height=100 /></a>
            </div>
            <div class="footerX">
                <br>
                <h5>Volg ons op Facebook</h5>
                <a href="https://www.facebook.com/sintmaartenscollegevoorburg/"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/05/Facebook_Logo_%282019%29.png/1024px-Facebook_Logo_%282019%29.png" alt="Facebook" width=100 height=100 /></a>
            </div>
            <div class="footerX">
                <br>
                <h3>Contact</h3>
                <h4>info@argus.nl</h4>
                <h4>+31 6 12345678</h4>
            </div>
            <div class="footerX">
                <br>
                <h3>Locatie</h3>
                <h4>Volmerlaan 7c</h4>
                <h4>2288 GC Rijswijk</h4>
            </div>
            <div class="footerX">
                <br><br>
                <a asp-action="Index"><img src="https://i.ibb.co/nLFbw3V/Argus.png" alt="Argus" width=100 height=100 /></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/darkmode.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
